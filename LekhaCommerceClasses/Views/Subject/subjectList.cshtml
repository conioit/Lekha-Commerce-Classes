
@{
    ViewBag.Title = "subjectList";
    Layout = "~/Views/Shared/adminLayout.cshtml";
    int i = 0;
}



<div class="col-lg-12">
    <ul class="nav nav-pills mb-12">
        <li class="nav-item"><a href="#list-view" data-toggle="tab" class="nav-link btn-primary mr-1 show active">All Subjects</a></li>
    </ul>
</div>
@if (TempData["message"] != null)
{
    <span style="color:green;font-size:20px;">@TempData["message"]</span>
}
<div class="col-lg-12">
    <div class="row tab-content">
        <div id="list-view" class="tab-pane fade active show col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">All Sub Courses List</h4>
                    @using (Html.BeginForm("AddsubCourse", "SubCourse", FormMethod.Get, new { enctype = "multipart/form-data" }))
                    {
                        <input type="submit" class="btn btn-primary" value="+ Add New" />
                        @*<a href="add-student.html" class="btn btn-primary">+ Add new</a>*@
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Course Name</th>
                                    <th>SubCourse Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Created Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.list)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td><strong>@item.tbl_CourseManagment.CourseName</strong></td>
                                        <td>@item.SubCourseName</td>
                                        <td>@item.SubCourseDescription</td>
                                        <td>@item.IsActive</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

